{{!--

login form handlebar template

--}}

<form method="POST" action="/login" id="login-form">
    <div class="container">
        <div class="form-group">
            <label for="emailAddressInput">Email Address:</label>
            <input type="email" name="emailAddressInput" id="emailAddressInput" required>
        </div>
        <div class="form-group">
            <label for="passwordInput">Password:</label>
            <input type="password" name="passwordInput" id="passwordInput" required>
        </div>
        <div class="form-group submit-btn">
            <button type="submit">Login</button>
        </div>
    </div>
    {{!-- <div id="loginError" class="error" hidden>Error: Please enter a valid username and password</div> --}}
</form>

<div id="loginErrors" class="error" hidden></div>

{{#if loginError}}
<div>{{error}}</div>
{{/if}}

<a href="/register">Click here to register!</a>

<script src="/public/js/main.js"></script>